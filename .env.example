# ===========================
# üîê GENERAL PROJECT SETTINGS
# ===========================
PROJECT_NAME=NeuroFold
ENVIRONMENT=development

# ===========================
# üöÄ FRONTEND SETTINGS
# ===========================
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api/v1

# ===========================
# üß† BACKEND SETTINGS (FASTAPI)
# ===========================
BACKEND_CORS_ORIGINS=http://localhost:3000

# Secret key for JWT signing
SECRET_KEY=change_this_to_a_long_random_string
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Algorithm (HS256 recommended)
JWT_ALGORITHM=HS256

# ===========================
# üóÑ DATABASE SETTINGS
# ===========================
# Local SQLite (development)
SQLITE_URL=sqlite:///./neurofold.db

# PostgreSQL (production)
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password_here
POSTGRES_DB=neurofold
DATABASE_URL=postgresql://postgres:password_here@localhost/neurofold

# ===========================
# üìÅ STORAGE SETTINGS
# ===========================
# Choose local or S3
USE_LOCAL_STORAGE=true

# Local folders
UPLOAD_FOLDER=./storage/uploads
REPORTS_FOLDER=./storage/reports
SHAP_FOLDER=./storage/shap_images

# S3 (fill these only if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=

# ===========================
# üìß EMAIL SETTINGS
# ===========================
# If using SendGrid
SENDGRID_API_KEY=

# If using SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=your_email@example.com

# ===========================
# üß¨ ML PIPELINE SETTINGS
# ===========================
MODEL_PATH=./ml/models/rf_model.joblib
MODEL_METADATA=./ml/models/model_metadata.json

# DSSP executable path (change based on installation)
DSSP_PATH=/usr/bin/mkdssp

# ===========================
# ‚ö° BACKGROUND TASKS (CELERY)
# ===========================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ===========================
# üîí SECURITY & RATE LIMITS
# ===========================
MAX_UPLOAD_MB=10
RATE_LIMIT_PER_MINUTE=60
